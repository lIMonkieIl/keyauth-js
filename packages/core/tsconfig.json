{
    "extends": "tsconfig/core.json",
    "compilerOptions": {
        "plugins": [{ "name": "core" }],
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@utils/*": ["./src/utils/*"],
            "@external/*": ["./src/external/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "./dist/**/*"]
}
